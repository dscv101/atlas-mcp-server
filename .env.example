# ATLAS MCP Server Configuration Example (Python Implementation)
# Copy this file to .env and modify values as needed

# Application Settings
ATLAS_APP_NAME="ATLAS MCP Server"
ATLAS_APP_VERSION="3.0.0"
ATLAS_ENVIRONMENT="development"

# Database Settings (KuzuDB)
ATLAS_DATABASE__PATH="./atlas.db"
ATLAS_DATABASE__BACKUP_DIR="./backups"
ATLAS_DATABASE__MAX_BACKUPS=10
ATLAS_DATABASE__AUTO_BACKUP=true
ATLAS_DATABASE__BACKUP_INTERVAL_HOURS=24

# MCP Server Settings
ATLAS_MCP__TRANSPORT="stdio"  # stdio, http, sse
ATLAS_MCP__HOST="127.0.0.1"
ATLAS_MCP__PORT=8000
ATLAS_MCP__LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR
ATLAS_MCP__AUTH_REQUIRED=false
ATLAS_MCP__AUTH_SECRET_KEY=""  # Set for HTTP transport with auth
ATLAS_MCP__RATE_LIMIT_REQUESTS=100
ATLAS_MCP__RATE_LIMIT_WINDOW_SECONDS=60

# Development Settings (only for development environment)
# ATLAS_MCP__LOG_LEVEL="DEBUG"
